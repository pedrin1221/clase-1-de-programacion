///////////////////////////////////////////////////////////////////////////////////////////////////////////
using System;
//pedrin ladron
class Program {
  public static void Main (string[] args) {
    //---------------------------------------------------------------
    float n1=0,n2=0;
    float a1=0,a2=0;
    float b1=0,b2=0;
    float c1=0,c2=0;
    float d1=0,d2=0;
    Console.WriteLine("para sumar:");
    Console.WriteLine("ingrese el primer numero: ");
    n1=float.Parse(Console.ReadLine());
    Console.WriteLine("ingrese el segundo numero:");
    n2=float.Parse(Console.ReadLine());
    
    float res= n1+n2;
    Console.WriteLine("la suma de " + n1 + "+" + n2 + " es= " + res);
//----------------------------------------------------------------------
    Console.WriteLine("para restar");
    
    Console.WriteLine("ingrese el primer numero: ");
    a1=float.Parse(Console.ReadLine());
    Console.WriteLine("ingrese el segundo numero:");
    a2=float.Parse(Console.ReadLine());
    
    float res1= a1-a2;
    Console.WriteLine("la resta de " + a1 + "-" + a2 + " es= " + res1);
    //------------------------------------------------------------------
    Console.WriteLine("para multiplicar:");
      
    Console.WriteLine("ingrese el primer numero: ");
    b1=float.Parse(Console.ReadLine());
    Console.WriteLine("ingrese el segundo numero:");
    b2=float.Parse(Console.ReadLine());
    
    float res2= b1*b2; 
    
    Console.WriteLine("la multiplicacion de " + b1 + "*" + b2 + " es= " + res2);
    //-------------------------------------------------------------------------
    Console.WriteLine("para dividir:");
      
    Console.WriteLine("ingrese el primer numero: ");
    c1=float.Parse(Console.ReadLine());
    Console.WriteLine("ingrese el segundo numero:");
    c2=float.Parse(Console.ReadLine());
    
    float res3= c1/c2;
    Console.WriteLine("la division entre " + c1 + " y " + c2 + " es= " + res3);
    //-------------------------------------------------------------------------
    Console.WriteLine("para averiguar el residuo de la division:");
      
    Console.WriteLine("ingrese el primer numero: ");
    d1=float.Parse(Console.ReadLine());
    Console.WriteLine("ingrese el segundo numero:");
    d2=float.Parse(Console.ReadLine());

    
    float res4= d1%d2;
    Console.WriteLine("el residuo entre la division " + d1 + " y " + d2 + " es= " + res4);
    }
}
  


