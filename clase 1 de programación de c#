using System;

class Program {
  public static void Main (string[] args) {
      String nombres="";
    String apellidos="";
    
    int edad=0;
    char genero=' ';
    string telefono="";
    nombres="Deivid";
    apellidos="Lopez";
    edad=21;
    telefono="327735635";
    genero='M';
    Console.WriteLine("nombre: "+ nombres + " " + apellidos);
    Console.WriteLine("edad: " + edad);
    Console.WriteLine("genero: " + genero);
    Console.WriteLine("telefono: " + telefono);
//--------------------------------------------------
    string nom1=" ", nom2=" ", ape1="", ape2="";
    float nota1=0, nota2=0, nota3=0, def=0;
    Console.WriteLine("Digite su primer nombre");
    nom1 = Console.ReadLine();
    Console.WriteLine("Digite su segundo nombre");
    nom2 = Console.ReadLine();
    Console.WriteLine("Digite su primer apellido");
    ape1 = Console.ReadLine();
    Console.WriteLine("Digite su segundo apellido");
    ape2 = Console.ReadLine();
    Console.WriteLine("Digite su primera nota");
    nota1 = float.Parse(Console.ReadLine());
    Console.WriteLine("Digite su segunda nota");
    nota2 = float.Parse(Console.ReadLine());
    Console.WriteLine("Digite su tercera nota");
    nota3 = float.Parse(Console.ReadLine());
    def=(nota1+nota2+nota3)/3;
    Console.WriteLine("Su nombre completo es: {0} {1} {2} {3}",nom1,nom2,ape1,ape2);
    Console.WriteLine("Su nota definitiva es: "+def);
//----------------------------------------------------------------------------------
    int num=0, d1=0, d2=0, d3=0, d4=0;
    Console.WriteLine("ingrese un numero de tres digitos:");
    num=int.Parse(Console.ReadLine());
    d1=num/1000;
    d2=(num/100)%10;
    d3=(num/10)%10;
    d4=num%10;
    Console.WriteLine("first digit is: {0},second is: {1},third is: {2}, four is: {3}" ,d1,d2,d3,d4);
    
    
  }
}




